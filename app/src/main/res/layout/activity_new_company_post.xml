<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NewCompanyPost">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                app:boxStrokeColor="#7c4dff"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                >

                <EditText
                    android:id="@+id/jobtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:hint="Job Title (eg: Driver, Delivery)" />


            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="97dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff">

                <EditText
                    android:id="@+id/jobdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:hint="Job Description" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="180dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff"
                >

                <EditText
                    android:id="@+id/jobskills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:hint="Skills Required (eg: carpentry, cleaning)" />


            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/salarylabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"

                android:layout_marginLeft="150dp"
                android:layout_marginTop="259dp"
                android:fontFamily="@font/baumans"
                android:text="Salary : "
                android:textSize="30dp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="160dp"

                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="320dp"
                app:boxStrokeColor="#7c4dff">

                <EditText
                    android:id="@+id/salfrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="12dp"
                    android:hint="From" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="230dp"

                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="320dp"
                android:layout_marginRight="10dp"
                app:boxStrokeColor="#7c4dff"
                >

                <EditText
                    android:id="@+id/salto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="12dp"
                    android:hint="To" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="420dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff"
                >

                <EditText
                    android:id="@+id/joblocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:hint="Job Location (eg: Dadar, Thane)" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="510dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff"
                >

                <EditText
                    android:id="@+id/jobopenings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="12dp"
                    android:hint="Number of Openings" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="600dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff">

                <EditText
                    android:id="@+id/jobcontact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:hint="Contact to reach(Mobile Number)"
                    android:inputType="number"
                    android:textSize="12dp"/>





            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="630dp"

                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                android:layout_marginLeft="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                app:boxStrokeColor="#7c4dff">

                <EditText
                    android:id="@+id/datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:hint="Contact to reach"
                    android:inputType="number"
                    android:textSize="12dp"/>





            </android.support.design.widget.TextInputLayout>




          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="690dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="280dp"
              android:layout_marginStart="280dp"
              android:layout_marginEnd="10dp"
              android:id="@+id/post"
              android:background="@drawable/background"
              android:text="Post"
              android:fontFamily="@font/baumans"
              android:textSize="17dp"
              android:textStyle="bold"
              android:layout_marginRight="10dp" />



        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
