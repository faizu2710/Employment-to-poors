<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ViewSpecificCompanyPost">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <android.support.v7.widget.CardView
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etitle"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="30dp"
                    android:background="@color/fui_transparent"
                    android:inputType="none"
                    android:text="Get Jobs"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/darkgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Description : " />

                    <EditText
                        android:id="@+id/edesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Skills : " />

                    <EditText
                        android:id="@+id/eskills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Salary From : " />

                    <EditText
                        android:id="@+id/esalfrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Salary To : " />

                    <EditText
                        android:id="@+id/esalto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Location : " />

                    <EditText
                        android:id="@+id/elocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Contact No : " />

                    <EditText
                        android:id="@+id/econtact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@android:color/darker_gray"
                        android:text="Openings : " />

                    <EditText
                        android:id="@+id/eopenings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fui_transparent"
                        android:gravity="center"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="Find your Matching Jobs"
                         />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/darkgray" />

                </LinearLayout>

                <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/fui_bgTwitter"
                    android:text="Update" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>



</RelativeLayout>